[ITEMDEF i_moinho_1]
ID=01930
name=alavanca
type=t_script

on=@create
attr=010
more1=0

on=@dclick
if (<src.restest 1 i_wheat_sheaf>)
 src.consume 1 i_wheat_sheaf
 //src.flags |= statf_freeze
 src.tag.nomovetill <eval <serv.time>+1000>
 src.anim 16 
 sfx 184
dispid=01935
 update
 more1=1
 link=<src.uid>
 timerd=0.3
 return 1
else
 src.sysmessage Voce nao tem trigo para moer.
